# AMS AS7331 Spectral UV Sensor driver options

menuconfig AS7331
	bool "AMS AS7331 Spectral UV Sensor"
	default y
	depends on DT_HAS_AMS_AS7331_ENABLED
	select I2C
	help
	  Enable AMS AS7331 spectral UV sensor driver.

if AS7331

choice AS7331_TRIGGER_MODE
	prompt "Trigger mode"
	help
	  Specify the type of triggering to be used by the driver.

config AS7331_TRIGGER_NONE
	bool "No trigger"

config AS7331_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select AS7331_TRIGGER

config AS7331_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select AS7331_TRIGGER

endchoice

config AS7331_TRIGGER
	bool

if AS7331_TRIGGER

config AS7331_THREAD_PRIORITY
	int "Thread priority"
	depends on AS7331_TRIGGER_OWN_THREAD
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config AS7331_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on AS7331_TRIGGER_OWN_THREAD
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # AS7331_TRIGGER

endif # AS7331
